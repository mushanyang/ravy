[apply]
  whitespace = fix
[core]
  autocrlf = input
  safecrlf = warn
  whitespace = trailing-space,space-before-tab
  excludesfile = ~/.agignore
  editor = ${GIT_EDITOR:-vim}
[color]
  ui = auto
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
  conflictstyle = diff3
  prompt = false
  keepBackup = false
[push]
  default = simple
[grep]
  extendedRegexp = true
[alias]
  aliases = !git config --get-regexp alias | cut -c7- | sed -E 's/([^ ]*) /'"$(tput setaf 5)"'\\1^'"$(tput sgr0)"'/' | column -t -s^
  al = !git aliases
  aa = add --all :/
  ac = add --all .
  au = add -u
  br = branch
  ci = commit --verbose
  cia = !git ci -a
  cim = !git ci --amend
  ciam = !git cia --amend
  co = checkout
  cp = cherry-pick
  ft = fetch
  fta = fetch --all
  rb = rebase
  st = status
  sm = submodule
  smu = submodule update --init --recursive
  smpa = submodule foreach git pull --rebase
  pr = pull --rebase
  pm = !git pr && git smu
  pp = !git pm && git push
  rv = remote -v
  gr = grep -n -I

  cof = !git branch -vv | fzf +m | cut -c 3- | field 1 | xargs git checkout

  # logs
  l = pretty-log
  lg = !git l --graph
  r = !GIT_NO_PAGER=1 git l -20
  h = !GIT_NO_PAGER=1 git l -1
  ld = log --decorate
  ls = log --decorate --stat

  # diffs
  df = !cdiff -c auto --
  di = !cdiff -c auto -s -w 0 --
  dc = icdiff
  ds = diff --stat
  dn = diff --name-only

  dfc = !git df --cached
  df1 = !git df HEAD~ HEAD
  dic = !git di --cached
  di1 = !git di HEAD~ HEAD
  dcc = !git dc --cached
  dc1 = !git dc HEAD~ HEAD
  dsc = !git ds --cached
  ds1 = !git ds HEAD~ HEAD
  dnc = !git dn --cached
  dn1 = !git dn HEAD~ HEAD

  de = !${GIT_EDITOR:-vim} $(git dn)
  dec = !${GIT_EDITOR:-vim} $(git dnc)
  de1 = !${GIT_EDITOR:-vim} $(git dn1)
